<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context=".Ud5_Preferences" >

    <Button
        android:id="@+id/btnPreferences"
        android:text="Cargar Preferencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickLoad" />

 <Button
        android:id="@+id/btnDisplayValues"
        android:text="Mostrar valor de Preferencia del EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickDisplay" />

 <EditText
        android:id="@+id/txtString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />       
 
 
  <Button
        android:id="@+id/btnModifyValues"
        android:text="Modifica valor de Preferencia del EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickModify" />
</LinearLayout>